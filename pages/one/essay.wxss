.fr-pspace-a0 {
	 display: block;margin-bottom: 5px
} 
 view {
	margin-top: 10px;
} 
.fr-pspace-a0,view,.one-img-container {
	width: 90%;	font-size: 15px;color: black;
}   

 .title,.hp_author,.fr-pspace-a0,view,.introduce,author,author-info,.one-img-container{
	 margin-left: 5%;
 }
 .title {
	 font-size: 22px; color: black;margin-bottom: 30px;
 }
 .hp_author {
	 font-size: 12px; color: darkgray;margin-bottom: 20px;
 }
 .introduce {
	 margin-top: 20px; font-size: 12px;color: lightgray
 }
 .label-author {
	 display: block;margin-top: 20px;
 }
 .label-line {
	 display: block;margin-top: 5px;width: 50px;border-top-color: black;border-top: 5px solid black
