/* pages/one/index.wxss */

/**
*头部 日期选择和天气
*/

.top {
    position:fixed;
     top:0;
     left:0;
     width: 100%;
     height: 30px;
    background-color:white;
    color: lightgray;
    font-size: 13px;
}
.top>picker {
	float: left;
	width: 100px;
	margin: 2px 5px 0 0;
}
.day {
	font-size: 16px;
	padding-left:2px; 
}
.YM {
	font-size: 12px;
	padding-left: 5px;
}
.weather {
	float: right;
	margin: 5px 5px 0 0;

}

/*
*主题item
*/
.section {
    margin-top: 30px;
    background-color:#d9d9d9;
   display:flex;
   flex-direction: column; 
}
.content {
  margin-bottom: 10px;
  background-color: white;
  border-bottom-left-radius: 15px;
  border-bottom-right-radius: 15px; 
}
.hp_img {
   width: 100%;   
}
.hp_author {
  margin-top: 10px;
  box-sizing: content-box;
}
.text-author {
  margin-top: 30px;
}
.text-author,.hp_author {
  display: block;
  color: #9f9a9a;
  font-size: 13px;
  text-align: center;
}

.hp_content {
  display: block;
  width:80%;
  margin-left: 10%;
  margin-top: 20px;
  text-align: left;
  font-size: 13px;
  color: #9f9a9a;
}

.share-view {
  margin-top: 30px;
  height: 30px;
}
.share-btn{
  margin-right: 15px; 
  width: 50px;
  font-size: 10px;
  border-radius: 3px;
}
.edit-btn {
  margin-right: 70px;
  font-size: 10px;
  width: 50px;
  margin-top: -25px;
  border-radius: 3px;
}

/**
*遮罩层css
*/
.model-view {
 position: fixed;
  width:100%;
  height:100%;
  top:0px;
  background:rgba(0,0,0,0.8);
}
.model-img {
  width: 90%;
  margin-top: 10%;
  margin-left: 5%;
}
.model-title,.model-author {
  color: white;
  font-size: 15px;
  margin-top: 20px;
  margin-left: 10px;
}

/**
*item系列
*/
.item-cate {
    text-align: center;
    color: lightgrey;
    font-size: 12px;
    height: 20px;
    margin-top: 5px;
}
.item-title,.item-author,.item-img,.item-forward,.item-subtitle,.item-music-subtitle {
    margin-left: 5%;
    width: 90%;
}
.item-title,.item-author {
    margin-top: 15px;
}
.item-img,.item-forward,.item-subtitle,.item-music-subtitle {
    margin-top: 10px;
}
.item-img>.img-com{
      width: 100%;  
      height: 200px; 
}
.item-img>.img-music {
    margin-left: 20%;
    width: 200px;  
    height: 200px;
    border-radius:200px;
}
.item-title {
    color: black;
    font-size: 18px;
}
.item-author,.item-subtitle,.item-music-subtitle {
color: lightgrey;
font-size: 12px;
}
.item-subtitle {
    text-align: right;
}
.item-forward {
    text-align: left;
    color: #666;
    font-size: 12px;
}

.share-other-btn{
  margin-right:15px; 
  margin-bottom: 5px;
  font-size: 10px;
  width: 50px;
  border-radius: 3px;
}
.date-label {
    display: block;
    margin-top: 20px;
     margin-left: 5%; 
    color: black;
    font-size: 12px;
}
.edit-btn,.share-btn,.share-other-btn {
	background-color: white;
	color: black
}

